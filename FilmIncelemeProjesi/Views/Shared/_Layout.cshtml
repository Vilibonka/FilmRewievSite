<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FilmİncelemeProjesi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FilmIncelemeProjesi.styles.css" asp-append-version="true" />

    <!-- BOOTSTRAP CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- BOOTSTRAP JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    @section Scripts {
    <partial name="_ValidationScriptsPartial" />
    }

</head>
<body class="bg-light text-dark" id="bodyTema">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Film<br>İnceleme</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <!-- Sol Menü Kısmı -->
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item"><a class="nav-link" href="/">Anasayfa</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Film">Filmler</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Sayfa/Hakkimizda">Hakkımızda</a></li>
                        <li class="nav-item"><a class="nav-link" href="/Sayfa/Iletisim">İletişim</a></li>
                        <li class="nav-item"><button class="btn btn-sm btn-outline-warning ms-2" onclick="temaDegistir()">🌗 Tema</button></li>
                    </ul>

                    <form class="d-flex" asp-controller="Film" asp-action="Ara" method="get">
                        <input class="form-control me-2" type="search" name="q" placeholder="Film ara..." />
                        <button class="btn btn-outline-light" type="submit">Ara</button>
                    </form>


                    <!-- Sağ Menü Kısmı -->
                    <ul class="navbar-nav">
                        @{
                            var kullaniciAdi = Context.Session.GetString("KullaniciAdi");
                        }
    
                        @{
                            var adminMi = false;

                            if (!string.IsNullOrEmpty(kullaniciAdi))
                            {
                                using (var scope = Context.RequestServices.CreateScope())
                                {
                                    var db = scope.ServiceProvider.GetService<FilmIncelemeProjesi.Models.UygulamaDbContext>();
                                    var k = db?.Kullanicilar.FirstOrDefault(x => x.KullaniciAdi == kullaniciAdi);
                                    adminMi = k?.AdminMi ?? false;
                                }
                            }
                        }

                        @if (adminMi)
                        {
                            <li class="nav-item"><a class="nav-link" href="/Film/ApiEkle">🎯 API'den Film Ekle</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Film/Create">🎬 Film Ekle (Admin)</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Film/PopulerFilmler">🔥 Popüler Filmleri Ekle</a></li>

                        }
                        @if (string.IsNullOrEmpty(kullaniciAdi))
                        {
                            <li class="nav-item"><a class="nav-link" href="/Kullanici/Giris">Giriş</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Kullanici/Kayit">Kayıt Ol</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><span class="nav-link">Hoş geldin, @kullaniciAdi</span></li>
                            <li class="nav-item"><a class="nav-link" href="/Kullanici/Profil">Profilim</a></li>
                            <li class="nav-item"><a class="nav-link" href="/Kullanici/Cikis">Çıkış</a></li>
                            
                        }
                    </ul>
                </div>

            </div>
        </nav>
    </header>

    <div class="container mt-4">
        @RenderBody()
    </div>

    <footer class="bg-dark text-white text-center py-3 mt-4 shadow-sm">
        <p>&copy; Proje - Film İnceleme Sitesi</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

<script>
    function temaDegistir() {
        const body = document.getElementById("bodyTema");

        if (body.classList.contains("bg-light")) {
            body.classList.remove("bg-light", "text-dark");
            body.classList.add("bg-dark", "text-white");
            localStorage.setItem("tema", "dark");
        } else {
            body.classList.remove("bg-dark", "text-white");
            body.classList.add("bg-light", "text-dark");
            localStorage.setItem("tema", "light");
        }
    }

    // Sayfa yüklendiğinde temayı kaybetmemek için
    window.addEventListener("DOMContentLoaded", () => {
        const body = document.getElementById("bodyTema");
        const tema = localStorage.getItem("tema");

        if (tema === "dark") {
            body.classList.remove("bg-light", "text-dark");
            body.classList.add("bg-dark", "text-white");
        } else {
            body.classList.remove("bg-dark", "text-white");
            body.classList.add("bg-light", "text-dark");
        }
    });
</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
