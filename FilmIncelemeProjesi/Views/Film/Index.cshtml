@model IEnumerable<FilmIncelemeProjesi.Models.Film>

<h2 class="mb-4">Filmler</h2>

<div class="row row-cols-1 row-cols-md-3 g-4">
@foreach (var film in Model)
{
    <div class="col">
        <div class="card h-100">
            <img src="@film.PosterUrl" class="card-img-top" alt="@film.Ad" style="height: 300px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title"><a asp-action="Details" asp-route-id="@film.Id" class="text-dark">@film.Ad</a></h5>
                <p class="card-text">@film.Aciklama</p>
                <p class="text-muted">@film.YayinTarihi.ToString("yyyy") - @film.Kategori</p>
                <a asp-action="Details" asp-route-id="@film.Id" class="btn btn-outline-primary mt-2">Detay</a>
            </div>
        </div>
    </div>
}
</div>
