@model FilmIncelemeProjesi.Models.Film

<h2>Yeni Film Ekle</h2>

<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label">Açıklama</label>
        <textarea asp-for="Aciklama" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label asp-for="YayinTarihi" class="form-label"></label>
        <input asp-for="YayinTarihi" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="PosterUrl" class="form-label">Poster URL</label>
        <input asp-for="PosterUrl" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Kategori" class="form-label"></label>
        <input asp-for="Kategori" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Ekle</button>
    <a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>
