@model List<Film>

<h2>Popüler Filmler</h2>

@if (TempData["Basarili"] != null)
{
    <div class="alert alert-success">@TempData["Basarili"]</div>
}

<form asp-action="PopulerFilmleriKaydet" method="post">
    @Html.AntiForgeryToken()
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var film in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@film.PosterUrl" class="card-img-top" style="height: 300px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@film.Ad</h5>
                        <p class="card-text">@film.Aciklama?.Substring(0, Math.Min(100, film.Aciklama.Length))...</p>
                        <input type="checkbox" name="filmAdlari" value="@film.Ad" /> Seç
                    </div>
                </div>
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-success">Seçilen Filmleri Kaydet</button>
    </div>
</form>
