@model List<FilmIncelemeProjesi.Models.Film>
@{
    ViewData["Title"] = "Arama Sonucu";
}

<h2 class="mb-4">Arama Sonuçları: "@ViewBag.Arama"</h2>

@if (!Model.Any())
{
    <div class="alert alert-warning">Sonuç bulunamadı.</div>
}
else
{
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var film in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <img src="@film.PosterUrl" class="card-img-top" style="height: 300px; object-fit: cover;" />
                    <div class="card-body">
                        <h5 class="card-title">@film.Ad</h5>
                        <p class="card-text">@film.Aciklama</p>
                        <a asp-action="Details" asp-route-id="@film.Id" class="btn btn-primary mt-2">Detay</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
